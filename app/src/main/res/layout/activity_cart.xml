<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:scrollbars="horizontal"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <TableLayout
                android:id="@+id/cart_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:padding="8dp"></TableLayout>

        </ScrollView>
    </HorizontalScrollView>

    <Button
        android:id="@+id/clearCartButton"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feeNotice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#D2D6D8"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="장바구니 비우기"
        android:textColor="#FF0000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/feeNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cartInfo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="63dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="※수수료는 티켓 장당 2000원씩 부과됩니다."
        android:textColor="#B00020"
        android:textSize="14sp"
        android:background="#FFFFFF"
        android:elevation="2dp" />

    <TextView
        android:id="@+id/cartInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontalScrollView"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:padding="16dp"
        android:gravity="center"
        android:text="총 가격: 0원"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="#FFFFFF"
        android:elevation="2dp" />

    <Button
        android:id="@+id/consumeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cartInfo"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="215dp"
        android:layout_marginTop="25dp"
        android:padding="16dp"
        android:textStyle="bold"
        android:text="예매진행"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cartInfo"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="25dp"
        android:padding="16dp"
        android:textStyle="bold"
        android:text="뒤로가기"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF" />
</RelativeLayout>
